<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lapum.paclouie">

    <application
        android:name=".ColdStartSimulation"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/BlackBackground" />
        <activity
            android:name=".StartScreenActivity"
            android:label="@string/title_activity_start_screen"
            android:theme="@style/BlackBackground"
            android:configChanges="orientation|keyboardHidden"/>

        <activity
            android:name=".DifficultyActivity"
            android:label="@string/title_activity_difficulty_page"
            android:theme="@style/BlackBackground" />
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/BlackBackground" />
        <activity
            android:name=".HighscoreActivity"
            android:label="@string/title_activity_highscore"
            android:theme="@style/BlackBackground" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/BlackBackground" />
    </application>

</manifest>